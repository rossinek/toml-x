{
  "name": "tomlx",
  "version": "0.1.1",
  "description": "CLI tool and library to merge TOML files with deep merge strategy",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "tomlx": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "tsc": "tsc --noEmit",
    "build": "tsc --project tsconfig.build.json",
    "prepublishOnly": "pnpm run build",
    "dev": "tsc --project tsconfig.build.json && node dist/cli.js",
    "test": "vitest",
    "test:run": "vitest run"
  },
  "keywords": [
    "toml",
    "merge",
    "cli",
    "config",
    "configuration"
  ],
  "author": "Artur Rosa <dev@arturrosa.pl>",
  "license": "MIT",
  "packageManager": "pnpm@10.16.1",
  "dependencies": {
    "defu": "^6.1.4",
    "smol-toml": "^1.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18"
  }
}
